<Window x:Class="SnipTool.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About SnipTool" Height="420" Width="540" WindowStartupLocation="CenterOwner"
        Background="{DynamicResource AppBackground}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource Card}" Padding="12" CornerRadius="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="48" Height="48" CornerRadius="10" Background="{DynamicResource InputBackground}" BorderBrush="{DynamicResource AppBorder}" BorderThickness="1">
                        <Image Source="pack://application:,,,/Assets/aiolle_logo.png" Stretch="Uniform" />
                    </Border>
                    <StackPanel Margin="12,0,0,0">
                        <TextBlock FontSize="18" FontWeight="SemiBold" Text="SnipTool" />
                        <TextBlock Foreground="{DynamicResource AppMutedText}" Text="Fast burst screenshots for Windows." />
                        <TextBlock x:Name="VersionText" Foreground="{DynamicResource AppMutedText}" Margin="0,4,0,0" Text="Version unknown" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Margin="0,14,0,10" BorderBrush="{DynamicResource AppBorder}" BorderThickness="1" CornerRadius="10" Padding="12" Background="{DynamicResource SurfaceBackground}">
            <StackPanel>
                <TextBlock FontWeight="SemiBold" Text="Privacy" />
                <TextBlock Margin="0,6,0,0" TextWrapping="Wrap">
                    SnipTool stores screenshots locally. No files or data are sent to external services.
                </TextBlock>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" BorderBrush="{DynamicResource AppBorder}" BorderThickness="1" CornerRadius="10" Padding="12" Background="{DynamicResource SurfaceBackground}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock FontWeight="SemiBold" Text="Created by" />
                    <TextBlock Text="Olle Söderqvist" />
                    <TextBlock Margin="0,10,0,0" FontWeight="SemiBold" Text="Contact" />
                    <TextBlock Margin="0,6,0,0">
                        <Hyperlink NavigateUri="https://aiolle.se" RequestNavigate="OnLinkNavigate">aiolle.se</Hyperlink>
                    </TextBlock>
                    <TextBlock Margin="0,4,0,0">
                        <Hyperlink NavigateUri="https://linkedin.com/in/olle-soderqvist" RequestNavigate="OnLinkNavigate">linkedin.com/in/olle-soderqvist</Hyperlink>
                    </TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock FontWeight="SemiBold" Text="Thanks" />
                    <TextBlock Margin="0,6,0,0" TextWrapping="Wrap">
                        Inspired by the fast, no‑friction workflow philosophy.
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <DockPanel Grid.Row="3" Margin="0,14,0,0" LastChildFill="False">
            <Button Width="90" DockPanel.Dock="Right" Content="Close" x:Name="CloseButton" />
        </DockPanel>
    </Grid>
</Window>
