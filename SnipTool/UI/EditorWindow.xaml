<Window x:Class="SnipTool.UI.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editor"
        Width="1200"
        Height="820"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource AppBackground}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource Card}" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <ToggleButton x:Name="PenToolButton" Content="Pen" Style="{StaticResource ToolToggle}" Margin="0,0,8,0" IsChecked="True" />
                    <ToggleButton x:Name="ArrowToolButton" Content="Arrow" Style="{StaticResource ToolToggle}" Margin="0,0,8,0" />
                    <ToggleButton x:Name="TextToolButton" Content="Text" Style="{StaticResource ToolToggle}" Margin="0,0,8,0" />
                    <ToggleButton x:Name="MaskToolButton" Content="Mask" Style="{StaticResource ToolToggle}" Margin="0,0,8,0" />
                    <ToggleButton x:Name="EraserToolButton" Content="Eraser" Style="{StaticResource ToolToggle}" Margin="0,0,8,0" />

                    <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Stroke" Style="{StaticResource MutedText}" Margin="0,0,8,0" VerticalAlignment="Center" />
                        <Slider x:Name="SizeSlider" Minimum="2" Maximum="18" Width="120" Value="4" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                        <ToggleButton x:Name="ColorBlackButton" Style="{StaticResource ColorToggle}" Background="#1B1F28" IsChecked="True" Margin="0,0,6,0" />
                        <ToggleButton x:Name="ColorWhiteButton" Style="{StaticResource ColorToggle}" Background="#FFFFFF" Margin="0,0,6,0" />
                        <ToggleButton x:Name="ColorRedButton" Style="{StaticResource ColorToggle}" Background="#E24A4A" Margin="0,0,6,0" />
                        <ToggleButton x:Name="ColorBlueButton" Style="{StaticResource ColorToggle}" Background="#3AA8FF" Margin="0,0,6,0" />
                        <ToggleButton x:Name="ColorYellowButton" Style="{StaticResource ColorToggle}" Background="#F2C94C" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="UndoButton" Content="Undo" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0" />
                    <Button x:Name="RedoButton" Content="Redo" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0" />
                    <Button x:Name="SaveButton" Content="Save" Margin="0,0,8,0" />
                    <Button x:Name="SaveCopyButton" Content="Save copy" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0" />
                    <Button x:Name="CloseButton" Content="Close" Style="{StaticResource SecondaryButton}" />
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource Card}" Padding="6" Margin="0,12,0,12">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid x:Name="DrawingSurface" Background="Transparent">
                    <Image x:Name="BaseImage" Stretch="None" />
                    <Canvas x:Name="ShapeLayer" Background="Transparent" />
                    <InkCanvas x:Name="InkLayer" Background="Transparent" />
                </Grid>
            </ScrollViewer>
        </Border>

        <Border Grid.Row="2" Style="{StaticResource Card}" Padding="10">
            <TextBlock x:Name="FileNameText" Style="{StaticResource MutedText}" />
        </Border>
    </Grid>
</Window>
