<Window x:Class="SnipTool.UI.VideoHudWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="False"
        SizeToContent="WidthAndHeight">
    <Border Background="{DynamicResource SurfaceBackground}"
            BorderBrush="{DynamicResource AppBorder}"
            BorderThickness="1"
            CornerRadius="10"
            Padding="10"
            Opacity="0.96">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Ellipse x:Name="RecDot" Width="10" Height="10" Fill="#E24A4A" Margin="0,0,8,0" />
            <TextBlock x:Name="StatusText" FontWeight="SemiBold" Margin="0,0,8,0" />
            <TextBlock x:Name="TimerText" FontWeight="SemiBold" Margin="0,0,12,0" />
            <Button x:Name="PauseButton" Content="Pause" Style="{StaticResource SecondaryButton}" Padding="8,4" Margin="0,0,6,0" />
            <Button x:Name="StopButton" Content="Stop" Style="{StaticResource SecondaryButton}" Padding="8,4" />
        </StackPanel>
    </Border>
</Window>
