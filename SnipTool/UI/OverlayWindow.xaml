<Window x:Class="SnipTool.UI.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="{DynamicResource OverlayBackground}"
        Topmost="True"
        ShowInTaskbar="False"
        Focusable="True">
    <Canvas x:Name="RootCanvas">
        <Rectangle x:Name="SelectionRect"
                   Stroke="{DynamicResource Accent}"
                   StrokeThickness="2"
                   Fill="{DynamicResource SelectionFill}"
                   Visibility="Collapsed" />
    </Canvas>
</Window>
