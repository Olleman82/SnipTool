<Window x:Class="SnipTool.UI.VideoCaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video capture"
        Width="520"
        Height="368"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource AppBackground}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource Card}" Padding="12">
            <StackPanel>
                <TextBlock Text="Video capture" FontSize="18" FontWeight="SemiBold" />
                <TextBlock Text="Record the main screen to MP4." Style="{StaticResource MutedText}" Margin="0,6,0,0" />
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource Card}" Margin="0,12,0,0" Padding="12">
            <StackPanel>
                <TextBlock Text="Source" Style="{StaticResource SectionHeader}" Margin="0,0,0,6" />
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="SourceFullscreen" Content="Fullscreen" IsChecked="True" Margin="0,0,12,0" />
                    <RadioButton x:Name="SourceWindow" Content="Window" Margin="0,0,12,0" />
                    <RadioButton x:Name="SourceRegion" Content="Region" />
                </StackPanel>
                <CheckBox x:Name="IncludeAudioCheck" Content="Include audio (system + mic)" Margin="0,10,0,0" />
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Style="{StaticResource Card}" Margin="0,12,0,0" Padding="12">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse x:Name="RecordingDot" Width="10" Height="10" Fill="#E24A4A" Margin="0,0,8,0" Visibility="Collapsed" />
                    <TextBlock x:Name="StatusText" FontSize="14" FontWeight="SemiBold" />
                    <TextBlock x:Name="TimerText" Margin="8,0,0,0" FontWeight="SemiBold" />
                </StackPanel>
                <TextBlock x:Name="PathText" Style="{StaticResource MutedText}" Margin="0,6,0,0" TextWrapping="Wrap" />
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="StartButton" Content="Start recording" Margin="0,0,8,0" />
            <Button x:Name="PauseButton" Content="Pause" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0" />
            <Button x:Name="StopButton" Content="Stop" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0" />
            <Button x:Name="DiscardButton" Content="Discard" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0" />
            <Button x:Name="CloseButton" Content="Close" Style="{StaticResource SecondaryButton}" />
        </StackPanel>
    </Grid>
</Window>
