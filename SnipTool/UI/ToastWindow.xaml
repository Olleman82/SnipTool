<Window x:Class="SnipTool.UI.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="{DynamicResource ToastBackground}"
        Foreground="{DynamicResource AppText}"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="False"
        SizeToContent="WidthAndHeight"
        Padding="12"
        Opacity="0.95">
    <Border CornerRadius="10" Background="{DynamicResource ToastBackground}" BorderBrush="{DynamicResource AppBorder}" BorderThickness="1">
        <StackPanel Orientation="Vertical" Margin="4">
            <TextBlock x:Name="MessageText" FontSize="12" TextWrapping="Wrap" />
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0" HorizontalAlignment="Right">
                <Button x:Name="UndoButton" Content="Undo" Margin="0,0,6,0" Style="{StaticResource ToastButton}" />
                <Button x:Name="OpenButton" Content="Open folder" Style="{StaticResource ToastButton}" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
