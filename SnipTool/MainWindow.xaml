<Window x:Class="SnipTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SnipTool"
        Height="420"
        Width="620"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource AppBackground}">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource Card}" Padding="12" CornerRadius="14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="SnipTool" FontSize="20" FontWeight="SemiBold" />
                    <TextBlock Text="Snabba, friktionsfria klipp." Style="{StaticResource MutedText}" Margin="0,4,0,0" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="LibraryButton" Content="Library" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0" />
                    <Button x:Name="VideoButton" Content="Video" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0" />
                    <Button x:Name="AboutButton" Content="About" Style="{StaticResource SecondaryButton}" Margin="0,0,12,0" />
                    <TextBlock Text="Dark mode" Style="{StaticResource MutedText}" VerticalAlignment="Center" />
                    <ToggleButton x:Name="ThemeToggle" Style="{StaticResource FlipToggle}" Margin="10,0,0,0" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="Save" Style="{StaticResource SectionHeader}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Save path" Grid.Row="0" Grid.Column="0" Margin="0,0,12,10" VerticalAlignment="Center" />
                        <TextBox x:Name="SavePathBox" Grid.Row="0" Grid.Column="1" />

                        <TextBlock Text="Filename" Grid.Row="1" Grid.Column="0" Margin="0,0,12,0" VerticalAlignment="Center"
                                   ToolTip="Supports {date} {time} {counter} or legacy HHmmss + ###" />
                        <TextBox x:Name="TemplateBox" Grid.Row="1" Grid.Column="1" />
                    </Grid>

                    <CheckBox x:Name="ClipboardBox" Content="Copy to clipboard after save" Margin="0,12,0,0" />
                    <CheckBox x:Name="VideoAudioBox" Content="Include audio by default (video)" Margin="0,8,0,0" />
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource Card}" Margin="8,0,0,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Hotkeys" Style="{StaticResource SectionHeader}" />
                        <TextBlock Text="(i)" Margin="8,0,0,0" Style="{StaticResource MutedText}">
                            <TextBlock.ToolTip>
                                <ToolTip>
                                    <TextBlock TextWrapping="Wrap" Width="280">
                                        To use Print Screen, disable Windows Snipping Tool: Settings > Accessibility > Keyboard > “Use the Print Screen button to open screen snipping”.
                                    </TextBlock>
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button x:Name="OpenPrintSettingsButton" Content="Open Print Screen setting" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0" />
                        <Button x:Name="ApplyRecommendedHotkeysButton" Content="Use recommended hotkeys" Style="{StaticResource SecondaryButton}" />
                    </StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Rectangle" Grid.Row="0" Grid.Column="0" Margin="0,0,12,10" VerticalAlignment="Center" />
                        <TextBox x:Name="HotkeyRectBox" Grid.Row="0" Grid.Column="1" IsReadOnly="True" />

                        <TextBlock Text="Window" Grid.Row="1" Grid.Column="0" Margin="0,0,12,10" VerticalAlignment="Center" />
                        <TextBox x:Name="HotkeyWindowBox" Grid.Row="1" Grid.Column="1" IsReadOnly="True" />

                        <TextBlock Text="Fullscreen" Grid.Row="2" Grid.Column="0" Margin="0,0,12,10" VerticalAlignment="Center" />
                        <TextBox x:Name="HotkeyFullBox" Grid.Row="2" Grid.Column="1" IsReadOnly="True" />

                        <TextBlock Text="Repeat last" Grid.Row="3" Grid.Column="0" Margin="0,0,12,0" VerticalAlignment="Center" />
                        <TextBox x:Name="HotkeyCopyBox" Grid.Row="3" Grid.Column="1" IsReadOnly="True" />

                        <TextBlock Text="Video region" Grid.Row="4" Grid.Column="0" Margin="0,0,12,10" VerticalAlignment="Center" />
                        <TextBox x:Name="HotkeyVideoRegionBox" Grid.Row="4" Grid.Column="1" IsReadOnly="True" />

                        <TextBlock Text="Video window" Grid.Row="5" Grid.Column="0" Margin="0,0,12,10" VerticalAlignment="Center" />
                        <TextBox x:Name="HotkeyVideoWindowBox" Grid.Row="5" Grid.Column="1" IsReadOnly="True" />

                        <TextBlock Text="Video fullscreen" Grid.Row="6" Grid.Column="0" Margin="0,0,12,10" VerticalAlignment="Center" />
                        <TextBox x:Name="HotkeyVideoFullscreenBox" Grid.Row="6" Grid.Column="1" IsReadOnly="True" />

                        <TextBlock Text="Stop recording" Grid.Row="7" Grid.Column="0" Margin="0,0,12,0" VerticalAlignment="Center" />
                        <TextBox x:Name="HotkeyVideoStopBox" Grid.Row="7" Grid.Column="1" IsReadOnly="True" />
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Burst:" Style="{StaticResource MutedText}" />
                <TextBlock x:Name="BurstStatusText" Margin="8,0,0,0" FontWeight="SemiBold" />
                <TextBlock Text="(i)" Margin="10,0,0,0" Style="{StaticResource MutedText}">
                    <TextBlock.ToolTip>
                        <ToolTip>
                            <TextBlock TextWrapping="Wrap" Width="280">
                                Burst groups multiple clips into one dated session folder. New burst resets the counter and folder. End burst pauses grouping so captures save to the root folder until you start a new burst.
                            </TextBlock>
                        </ToolTip>
                    </TextBlock.ToolTip>
                </TextBlock>
            </StackPanel>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="NewBurstButton" Content="New burst" Width="110" Margin="0,0,8,0" />
                    <Button x:Name="EndBurstButton" Content="End burst" Width="110" Style="{StaticResource SecondaryButton}" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="16,0,0,0">
                    <Button x:Name="SaveButton" Content="Save" Width="96" Margin="0,0,8,0" />
                    <Button x:Name="CloseButton" Content="Close" Width="96" Style="{StaticResource SecondaryButton}" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
