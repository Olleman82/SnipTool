<Window x:Class="SnipTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SnipTool"
        Height="640"
        Width="580"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="{DynamicResource AppBackground}">
        <Grid Margin="20" Background="{DynamicResource AppBackground}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource Card}" Padding="16" CornerRadius="14">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="SnipTool" FontSize="20" FontWeight="SemiBold" />
                        <TextBlock Text="Snabba, friktionsfria klipp." Style="{StaticResource MutedText}" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Dark mode" Style="{StaticResource MutedText}" VerticalAlignment="Center" />
                        <ToggleButton x:Name="ThemeToggle" Style="{StaticResource FlipToggle}" Margin="10,0,0,0" />
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource Card}" Margin="0,16,0,0">
                <StackPanel>
                    <TextBlock Text="Save" Style="{StaticResource SectionHeader}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Save path" Grid.Row="0" Grid.Column="0" Margin="0,0,12,10" VerticalAlignment="Center" />
                        <TextBox x:Name="SavePathBox" Grid.Row="0" Grid.Column="1" />

                        <TextBlock Text="Filename template" Grid.Row="1" Grid.Column="0" Margin="0,0,12,0" VerticalAlignment="Center" />
                        <TextBox x:Name="TemplateBox" Grid.Row="1" Grid.Column="1" />
                    </Grid>

                    <CheckBox x:Name="ClipboardBox" Content="Copy to clipboard after save" Margin="0,12,0,0" />
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Grid.ColumnSpan="2" Style="{StaticResource Card}" Margin="0,16,0,0">
                <StackPanel>
                    <TextBlock Text="Hotkeys" Style="{StaticResource SectionHeader}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Rectangle" Grid.Row="0" Grid.Column="0" Margin="0,0,12,10" VerticalAlignment="Center" />
                        <TextBox x:Name="HotkeyRectBox" Grid.Row="0" Grid.Column="1" />

                        <TextBlock Text="Window" Grid.Row="1" Grid.Column="0" Margin="0,0,12,10" VerticalAlignment="Center" />
                        <TextBox x:Name="HotkeyWindowBox" Grid.Row="1" Grid.Column="1" />

                        <TextBlock Text="Fullscreen" Grid.Row="2" Grid.Column="0" Margin="0,0,12,10" VerticalAlignment="Center" />
                        <TextBox x:Name="HotkeyFullBox" Grid.Row="2" Grid.Column="1" />

                        <TextBlock Text="Copy last" Grid.Row="3" Grid.Column="0" Margin="0,0,12,0" VerticalAlignment="Center" />
                        <TextBox x:Name="HotkeyCopyBox" Grid.Row="3" Grid.Column="1" />
                    </Grid>
                </StackPanel>
            </Border>

            <Border Grid.Row="3" Grid.ColumnSpan="2" Style="{StaticResource Card}" Margin="0,16,0,0">
                <StackPanel>
                    <TextBlock Text="About" Style="{StaticResource SectionHeader}" />
                    <StackPanel Orientation="Horizontal">
                        <Border Width="56" Height="56" CornerRadius="12" Background="{DynamicResource InputBackground}" BorderBrush="{DynamicResource AppBorder}" BorderThickness="1">
                            <Image x:Name="LogoImage" Source="pack://application:,,,/Assets/aiolle_logo.png" Stretch="Uniform" />
                        </Border>
                        <StackPanel Margin="12,0,0,0">
                            <TextBlock Text="SnipTool" FontSize="16" FontWeight="SemiBold" />
                            <TextBlock Text="Extremt snabb skärmklippning i burst-flöden." Style="{StaticResource MutedText}" />
                            <TextBlock x:Name="VersionText" Style="{StaticResource MutedText}" Margin="0,6,0,0" Text="Version okänd" />
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Margin="0,12,0,0" TextWrapping="Wrap">
                        SnipTool sparar dina klipp lokalt och skickar inget till externa tjänster.
                    </TextBlock>
                    <Border Margin="0,12,0,0" BorderBrush="{DynamicResource AppBorder}" BorderThickness="1" CornerRadius="10" Background="{DynamicResource InputBackground}" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock FontWeight="SemiBold" Text="Skapad av" />
                                <TextBlock Text="Olle Söderqvist" />
                                <TextBlock Margin="0,10,0,0" FontWeight="SemiBold" Text="Kontakt" />
                                <TextBlock Margin="0,6,0,0">
                                    <Hyperlink NavigateUri="https://aiolle.se" RequestNavigate="OnLinkNavigate">aiolle.se</Hyperlink>
                                </TextBlock>
                                <TextBlock Margin="0,4,0,0">
                                    <Hyperlink NavigateUri="https://linkedin.com/in/olle-soderqvist" RequestNavigate="OnLinkNavigate">linkedin.com/in/olle-soderqvist</Hyperlink>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock FontWeight="SemiBold" Text="Integritet" />
                                <TextBlock Margin="0,6,0,0" TextWrapping="Wrap">
                                    Skärmdumpar sparas lokalt. Inga filer eller data skickas vidare.
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
                <Button x:Name="SaveButton" Content="Save" Width="96" Margin="0,0,10,0" />
                <Button x:Name="CloseButton" Content="Close" Width="96" Style="{StaticResource SecondaryButton}" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
